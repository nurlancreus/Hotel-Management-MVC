@{
    Layout = null;
}
<!doctype html>
<html lang="en">
@await Html.PartialAsync("~/Views/Shared/_UILayoutPartial/_UILayoutHeaderPartial.cshtml")
<body>
    <header role="banner">

        <nav class="navbar navbar-expand-md navbar-dark bg-light">
            <div class="container">
                <a class="navbar-brand" asp-controller="HomePage" asp-action="Index">Luxury Hotel</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample05" aria-controls="navbarsExample05" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse navbar-light" id="navbarsExample05">
                    <ul class="navbar-nav ml-auto pl-lg-5 pl-0">
                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.Active == "signIn" ? "active" : "")" asp-controller="Login" asp-action="SignIn">Sign in</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.Active == "signIn" ? "active" : "")@(ViewBag.Active == "signUp" ? "active" : "")" asp-controller="Login" asp-action="SignUp">Sign up</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.Active == "logIn" ? "active" : "")" asp-controller="Login" asp-action="LogOut">Log Out</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.Active == "homePage" ? "active" : "")" asp-controller="HomePage" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.Active == "room" ? "active" : "")" asp-controller="RoomPage" asp-action="Index">Room</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.Active == "blog" ? "active" : "")" asp-controller="BlogPage" asp-action="Index">Blog</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.Active == "about" ? "active" : "")" asp-controller="AboutPage" asp-action="Index">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.Active == "contact" ? "active" : "")" asp-controller="ContactPage" asp-action="Index">Contact</a>
                        </li>

                        <li class="nav-item cta">
                            <a class="nav-link @(ViewBag.Active == "bookNow" ? "active" : "")" asp-controller="BookNowPage" asp-action="Index"><span>Book Now</span></a>
                        </li>
                    </ul>

                </div>
            </div>
        </nav>
    </header>
    <!-- END header -->
    <section class="site-hero site-hero-innerpage overlay" data-stellar-background-ratio="0.5" style="background-image: url(/luxury-hotel-master/images/big_image_1.jpg);">
        <div class="container">
            <div class="row align-items-center site-hero-inner justify-content-center">
                <div class="col-md-12 text-center">

                    <div class="mb-5 element-animate">
                        <h1>About Luxury Hotel</h1>
                        <p>Discover our world's #1 Luxury Room For VIP.</p>
                    </div>

                </div>
            </div>
        </div>
    </section>
    @RenderBody()
    @await Html.PartialAsync("~/Views/Shared/_UILayoutPartial/_UILayoutFooterPartial.cshtml")
    <div id="loader" class="show fullscreen"><svg class="circular" width="48px" height="48px"><circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee" /><circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10" stroke="#f4b214" /></svg></div>
    @await Html.PartialAsync("~/Views/Shared/_UILayoutPartial/_UILayoutScriptsPartial.cshtml")

</body>
</html>
